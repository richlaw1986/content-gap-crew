# Sanity CMS
SANITY_PROJECT_ID=your-project-id
SANITY_DATASET=production
SANITY_API_TOKEN=your-api-token

# LLM
ANTHROPIC_API_KEY=your-anthropic-key

# Optional: Override LLM models
# LLM_MODEL_DEFAULT=claude-sonnet-4-5-20250929
# LLM_MODEL_SMART=claude-opus-4-5-20251101
# LLM_MODEL_FAST=claude-haiku-4-5-20251001

# Application
ENVIRONMENT=development
DEBUG=true

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:3000

# ============================================================
# Tool Credentials (set based on which tools you're using)
# ============================================================

# OpenAI (for query fanout tool)
# OPENAI_API_KEY=your-openai-key

# BigQuery
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# Google Search Console
# GSC_KEY_FILE=/path/to/gsc-service-account.json
# GSC_SITE_URL=https://www.sanity.io/

# Google Ads
# GOOGLE_ADS_DEVELOPER_TOKEN=your-developer-token
# GOOGLE_ADS_CLIENT_ID=your-client-id
# GOOGLE_ADS_CLIENT_SECRET=your-client-secret
# GOOGLE_ADS_REFRESH_TOKEN=your-refresh-token
# GOOGLE_ADS_CUSTOMER_ID=your-customer-id

# Reddit
# REDDIT_CLIENT_ID=your-client-id
# REDDIT_CLIENT_SECRET=your-client-secret
# REDDIT_USER_AGENT=ContentGapCrew/1.0
